{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Metadata": {
    "License": "Apache-2.0"
  },
  "Description":
    "Create: A two column dynamodb table with composite primary key and autoscaling. Dependency: none",
  "Parameters": {
    "TableName": {
      "Type": "String",
      "Default": "tableName"
    },
    "TableHashKeyName": {
      "Type": "String",
      "Default": "hKey"
    },
    "TableRangeKeyName": {
      "Type": "String",
      "Default": "rKey"
    },
    "TableReadCapacityUnits": {
      "Description": "Provisioned read throughput",
      "Type": "Number",
      "Default": "1",
      "MinValue": "1",
      "MaxValue": "10000"
    },
    "TableWriteCapacityUnits": {
      "Description": "Provisioned write throughput",
      "Type": "Number",
      "Default": "1",
      "MinValue": "1",
      "MaxValue": "10000"
    },
    "TableReadCapacityUnitsMin": {
      "Description": "Autoscaling read capacity min",
      "Type": "Number",
      "Default": "1",
      "MinValue": "1",
      "MaxValue": "10000"
    },
    "TableReadCapacityUnitsMax": {
      "Description": "Autoscaling read capacity max",
      "Type": "Number",
      "Default": "5",
      "MinValue": "1",
      "MaxValue": "10000"
    },
    "TableWriteCapacityUnitsMin": {
      "Description": "Autoscaling write capacity min",
      "Type": "Number",
      "Default": "1",
      "MinValue": "1",
      "MaxValue": "10000"
    },
    "TableWriteCapacityUnitsMax": {
      "Description": "Autoscaling write capacity max",
      "Type": "Number",
      "Default": "5",
      "MinValue": "1",
      "MaxValue": "10000"
    }
  },
  "Resources": {
    "ScalingRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": ["application-autoscaling.amazonaws.com"]
              },
              "Action": ["sts:AssumeRole"]
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:DescribeTable",
                    "dynamodb:UpdateTable",
                    "cloudwatch:PutMetricAlarm",
                    "cloudwatch:DescribeAlarms",
                    "cloudwatch:GetMetricStatistics",
                    "cloudwatch:SetAlarmState",
                    "cloudwatch:DeleteAlarms"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "Table": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {
          "Ref": "TableName"
        },
        "AttributeDefinitions": [
          {
            "AttributeName": {
              "Ref": "TableHashKeyName"
            },
            "AttributeType": "S"
          },
          {
            "AttributeName": {
              "Ref": "TableRangeKeyName"
            },
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": {
              "Ref": "TableHashKeyName"
            },
            "KeyType": "HASH"
          },
          {
            "AttributeName": {
              "Ref": "TableRangeKeyName"
            },
            "KeyType": "RANGE"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": {
            "Ref": "TableReadCapacityUnits"
          },
          "WriteCapacityUnits": {
            "Ref": "TableWriteCapacityUnits"
          }
        }
      }
    },
    "TableReadCapacityScalableTarget": {
      "Type": "AWS::ApplicationAutoScaling::ScalableTarget",
      "Properties": {
        "MaxCapacity": {
          "Ref": "TableReadCapacityUnitsMax"
        },
        "MinCapacity": {
          "Ref": "TableReadCapacityUnitsMin"
        },
        "ResourceId": {
          "Fn::Join": [
            "/",
            [
              "table",
              {
                "Ref": "TableName"
              }
            ]
          ]
        },
        "RoleARN": {
          "Fn::GetAtt": ["ScalingRole", "Arn"]
        },
        "ScalableDimension": "dynamodb:table:ReadCapacityUnits",
        "ServiceNamespace": "dynamodb"
      }
    },
    "TableReadScalingPolicy": {
      "Type": "AWS::ApplicationAutoScaling::ScalingPolicy",
      "Properties": {
        "PolicyName": "ReadAutoScalingPolicy",
        "PolicyType": "TargetTrackingScaling",
        "ScalingTargetId": {
          "Ref": "TableReadCapacityScalableTarget"
        },
        "TargetTrackingScalingPolicyConfiguration": {
          "TargetValue": 80,
          "ScaleInCooldown": 60,
          "ScaleOutCooldown": 60,
          "PredefinedMetricSpecification": {
            "PredefinedMetricType": "DynamoDBReadCapacityUtilization"
          }
        }
      }
    },
    "TableWriteCapacityScalableTarget": {
      "Type": "AWS::ApplicationAutoScaling::ScalableTarget",
      "Properties": {
        "MaxCapacity": {
          "Ref": "TableWriteCapacityUnitsMax"
        },
        "MinCapacity": {
          "Ref": "TableWriteCapacityUnitsMin"
        },
        "ResourceId": {
          "Fn::Join": [
            "/",
            [
              "table",
              {
                "Ref": "TableName"
              }
            ]
          ]
        },
        "RoleARN": {
          "Fn::GetAtt": ["ScalingRole", "Arn"]
        },
        "ScalableDimension": "dynamodb:table:WriteCapacityUnits",
        "ServiceNamespace": "dynamodb"
      }
    },
    "TableWriteScalingPolicy": {
      "Type": "AWS::ApplicationAutoScaling::ScalingPolicy",
      "Properties": {
        "PolicyName": "WriteAutoScalingPolicy",
        "PolicyType": "TargetTrackingScaling",
        "ScalingTargetId": {
          "Ref": "TableWriteCapacityScalableTarget"
        },
        "TargetTrackingScalingPolicyConfiguration": {
          "TargetValue": 80,
          "ScaleInCooldown": 60,
          "ScaleOutCooldown": 60,
          "PredefinedMetricSpecification": {
            "PredefinedMetricType": "DynamoDBWriteCapacityUtilization"
          }
        }
      }
    }
  },
  "Outputs": {
    "TableArn": {
      "Value": {
        "Fn::GetAtt": ["Table", "Arn"]
      },
      "Description": "Arn of the newly created DynamoDB table",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-TableArn"
        }
      }
    }
  }
}
