{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Metadata": {
    "License": "Apache-2.0"
  },
  "Description": "Create: cognito userpool. Dependency: none.",
  "Parameters": {
    "CUPName": {
      "Description": "Name of the userpool to create.",
      "Type": "String",
      "Default": "cup"
    },
    "CUPClientName": {
      "Description": "Name of the userpool client to create.",
      "Type": "String",
      "Default": "an-app"
    }
  },
  "Resources": {
    "CUP": {
      "Type": "AWS::Cognito::UserPool",
      "Properties": {
        "AutoVerifiedAttributes": [
          "email"
        ],
        "EmailVerificationMessage": "Your verification code is {####}.",
        "EmailVerificationSubject": "Your verification code",
        "Schema": [
          {
            "Name": "email",
            "AttributeDataType": "String",
            "Mutable": false,
            "Required": true
          }
        ],
        "UserPoolName": {
          "Ref": "CUPName"
        }
      }
    },
    "CUPClient": {
      "Type": "AWS::Cognito::UserPoolClient",
      "Properties": {
        "ClientName": {
          "Ref": "CUPClientName"
        },
        "ExplicitAuthFlows": [
          "ADMIN_NO_SRP_AUTH"
        ],
        "GenerateSecret": "false",
        "RefreshTokenValidity": 30,
        "UserPoolId": {
          "Ref": "CUP"
        }
      }
    }
  },
  "Outputs": {
    "CUPId": {
      "Value": {
        "Ref": "CUP"
      },
      "Description": "Name of the newly created userpool.",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-CUPId"
        }
      }
    },
    "CUPProviderName": {
      "Value": {
        "Fn::GetAtt": [
          "CUP",
          "ProviderName"
        ]
      },
      "Description": "userpool provider name",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-CUPProviderName"
        }
      }
    },
    "CUPArn": {
      "Value": {
        "Fn::GetAtt": [
          "CUP",
          "Arn"
        ]
      },
      "Description": "Arn of the newly created userpool",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-CUPArn"
        }
      }
    },
    "CUPClientId": {
      "Value": {
        "Ref": "CUPClient"
      },
      "Description": "Name of the newly created userpool client.",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-CUPClientId"
        }
      }
    }
  }
}