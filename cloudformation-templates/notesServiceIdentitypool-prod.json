{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Metadata": {
    "License": "Apache-2.0"
  },
  "Description": "Create: Cognito identitypool that uses cognito userpool. Dependency: Cognito userpool, uploads bucket, api-gateway.",
  "Parameters": {
    "CIPName": {
      "Type": "String",
      "Default": "myIdentitypool"
    },
    "UploadsPath": {
      "Description": "existing s3bucket uploads path: <bacuketName>/<path>",
      "Type": "String",
      "Default": "myuploadsbucket/some-path/"
    },
    "CUPClientIdImport": {
      "Description": "cognito userpool client Id import string",
      "Type": "String",
      "Default": "CUPClientIdImportString"
    },
    "CUPProviderNameImport": {
      "Description": "cognito userpool client Id import string",
      "Type": "String",
      "Default": "CUPClientIdImportString"
    },
    "ApigIdImport": {
      "Description": " ApigId import string",
      "Type": "String",
      "Default": "restApigIdImportString"
    },
    "ApigStackRegion": {
      "Description": "Region of the api gateway",
      "Type": "String",
      "Default": "us-east-1"
    }
  },
  "Resources": {
    "CognitoAuthRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Sub": "Cognito_${CIPName}_Auth_Role"
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Federated": "cognito-identity.amazonaws.com"
              },
              "Action": [
                "sts:AssumeRoleWithWebIdentity"
              ],
              "Condition": {
                "StringEquals": {
                  "cognito-identity.amazonaws.com:aud": {
                    "Ref": "CIP"
                  }
                },
                "ForAnyValue:StringLike": {
                  "cognito-identity.amazonaws.com:amr": "authenticated"
                }
              }
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "cognitoauth",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "mobileanalytics:PutEvents",
                    "cognito-sync:*",
                    "cognito-identity:*"
                  ],
                  "Resource": [
                    "*"
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:*"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          {
                            "Fn::Sub": "arn:aws:s3:::${UploadsPath}"
                          },
                          "${cognito-identity.amazonaws.com:sub}/*"
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "execute-api:Invoke"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        ":",
                        [
                          "arn:aws:execute-api",
                          {
                            "Ref": "ApigStackRegion"
                          },
                          "*",
                          {
                            "Fn::Join": [
                              "",
                              [
                                {
                                  "Fn::ImportValue": {
                                    "Ref": "ApigIdImport"
                                  }
                                },
                                "/*"
                              ]
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "CIP": {
      "Type": "AWS::Cognito::IdentityPool",
      "Properties": {
        "IdentityPoolName": {
          "Ref": "CIPName"
        },
        "AllowUnauthenticatedIdentities": false,
        "CognitoIdentityProviders": [
          {
            "ClientId": {
              "Fn::ImportValue": {
                "Ref": "CUPClientIdImport"
              }
            },
            "ProviderName": {
              "Fn::ImportValue": {
                "Ref": "CUPProviderNameImport"
              }
            }
          }
        ]
      }
    },
    "CIPRoleAttachment": {
      "DependsOn": [
        "CIP",
        "CognitoUnauthRole",
        "CognitoAuthRole"
      ],
      "Type": "AWS::Cognito::IdentityPoolRoleAttachment",
      "Properties": {
        "IdentityPoolId": {
          "Ref": "CIP"
        },
        "Roles": {
          "authenticated": {
            "Fn::GetAtt": [
              "CognitoAuthRole",
              "Arn"
            ]
          },
          "unauthenticated": {
            "Fn::GetAtt": [
              "CognitoUnauthRole",
              "Arn"
            ]
          }
        }
      }
    },
    "CognitoUnauthRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Sub": "Cognito_${CIPName}_Unauth_Role"
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Federated": "cognito-identity.amazonaws.com"
              },
              "Action": [
                "sts:AssumeRoleWithWebIdentity"
              ],
              "Condition": {
                "StringEquals": {
                  "cognito-identity.amazonaws.com:aud": {
                    "Ref": "CIP"
                  }
                },
                "ForAnyValue:StringLike": {
                  "cognito-identity.amazonaws.com:amr": "unauthenticated"
                }
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "cognitounauth",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "mobileanalytics:PutEvents",
                    "cognito-sync:*"
                  ],
                  "Resource": [
                    "*"
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "CIPId": {
      "Value": {
        "Ref": "CIP"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-CIPId"
        }
      }
    }
  }
}